import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
// import Steps2 from '~/components/widgets/Steps2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Sobre Nosotros',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Sobre Nosotros - SolutionTracker"
    image={{

      
      src: 'https://i.ibb.co/vDfCNyT/foto.jpg',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Somos una empresa líder en soluciones de rastreo satelital <br />
      <span class="text-accent dark:text-white highlight"> que impulsan la eficiencia, seguridad y control de activos </span>
    </Fragment>

    <Fragment slot="subtitle">
     Descubra quiénes somos y por qué somos la elección preferida para empresas que buscan soluciones confiables y tecnológicamente avanzadas.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Datos sobre nosotros"
    stats={[
      { title: 'Dispositivos instalados', amount: '247367' },
      { title: 'Clientes', amount: '31947' },
      { title: 'Fue fundada', amount: '2018' },
      { title: 'Partners mundiales', amount: '231' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Historia de la empresa"
    subtitle="Desde nuestra fundación en 2018, en SolutionTracker nos hemos dedicado a proporcionar soluciones de rastreo satelital. Nuestra empresa ha evolucionado a lo largo de los años, adaptándose a las crecientes demandas de un mundo en constante cambio."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Misión',
        description:
          'Facilitar la gestión eficiente y segura de activos a través de soluciones avanzadas de rastreo satelital.',
        icon: 'tabler:template',
      },
      {
        title: 'Visión',
        description:
          'Ser reconocidos a nivel mundial como líderes en tecnología de rastreo, destacando la excelencia, la innovación y la integridad en todo lo que hacemos.',
        icon: 'tabler:template',
      },
      {
        title: 'Valores',
        description:
          'Compromiso con la calidad, innovación, integridad, y la satisfacción del cliente.',
        icon: 'tabler:template',
      },
    ]}
  />
  
  <Steps
    title="En SolutionTracker, creemos en el compromiso con la satisfacción del cliente y la excelencia operativa."
    tagline="Filosofía de Trabajo"
    isReversed={true}
    items={[
      {
        title: ' Nuestra filosofía se centra en ofrecer soluciones que no solo cumplen con las expectativas, sino que las superan.',
        icon: 'tabler:vocabulary',
      },
      {
        title: 'Nos enorgullece mantener una cultura empresarial que valora la innovación, la colaboración y el respeto. Nuestro equipo está formado por profesionales apasionados que comparten la visión de hacer de SolutionTracker una empresa líder y en constante evolución.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Impulsamos la industria de rastreo satelital a través de la adopción de tecnologías avanzadas. Nuestra dedicación a la innovación    nos permite ofrecer soluciones precisas, confiables y a la vanguardia.',
        icon: 'tabler:code-circle',
      },
  
    ]}
    image={{
      src: 'https://i.ibb.co/hdy3WYT/fotoss.jpg',
      alt: 'Steps image',
    }}
  />

